<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<HBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.unibi.agbi.gnius.business.controller.editor.details.ConnectionsController">
    <children>
        <VBox spacing="5.0">
            <children>
                <Label text="Incoming Connections from:" />
                <HBox spacing="5.0" VBox.vgrow="ALWAYS">
                    <children>
                        <ListView fx:id="listConnectionsIncoming" prefHeight="95.0" HBox.hgrow="ALWAYS" />
                        <VBox alignment="TOP_CENTER" spacing="5.0">
                            <children>
                                <Button fx:id="buttonConnectionFromDisable" mnemonicParsing="false" prefWidth="60.0" text="Disable">
                                    <tooltip>
                                        <Tooltip text="Disable or enable the connection to the selected node" />
                                    </tooltip>
                                </Button>
                                <Button fx:id="buttonConnectionFromEdit" mnemonicParsing="false" prefWidth="60.0" text="Edit">
                                    <tooltip>
                                        <Tooltip text="Edit details for the connection to the selected node" />
                                    </tooltip>
                                </Button>
                                <Button fx:id="buttonConnectionFromShow" mnemonicParsing="false" prefWidth="60.0" text="Show">
                                    <tooltip>
                                        <Tooltip text="Show the connection to the selected node in graph" />
                                    </tooltip>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
        <Separator orientation="VERTICAL" />
        <VBox spacing="5.0">
            <children>
                <Label text="Graph Entities:" />
                <HBox spacing="5.0">
                    <children>
                        <ListView fx:id="listGraphEntities" prefHeight="95.0" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <Separator orientation="VERTICAL" />
        <VBox spacing="5.0">
            <children>
                <Label text="Outgoing Connections to:" />
                <HBox spacing="5.0" VBox.vgrow="ALWAYS">
                    <children>
                        <ListView fx:id="listConnectionsOutgoing" prefHeight="95.0" HBox.hgrow="ALWAYS" />
                        <VBox alignment="TOP_CENTER" spacing="5.0">
                            <children>
                                <Button fx:id="buttonConnectionToDisable" mnemonicParsing="false" prefWidth="60.0" text="Disable">
                                    <tooltip>
                                        <Tooltip text="Disable or enable the connection to the selected node" />
                                    </tooltip>
                                </Button>
                                <Button fx:id="buttonConnectionToEdit" mnemonicParsing="false" prefWidth="60.0" text="Edit">
                                    <tooltip>
                                        <Tooltip text="Edit details for the connection to the selected node" />
                                    </tooltip>
                                </Button>
                                <Button fx:id="buttonConnectionToShow" mnemonicParsing="false" prefWidth="60.0" text="Show">
                                    <tooltip>
                                        <Tooltip text="Show the connection to the selected node in graph" />
                                    </tooltip>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</HBox>

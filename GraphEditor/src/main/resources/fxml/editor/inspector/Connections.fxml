<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.unibi.agbi.editor.presentation.controller.editor.inspector.ConnectionsController">
    <children>
        <VBox spacing="5.0">
            <children>
                <Label fx:id="labelListConnectionsIn" text="Incoming Arcs:" />
                <HBox spacing="5.0" VBox.vgrow="ALWAYS">
                    <children>
                        <ListView fx:id="listConnectionsIncoming" prefHeight="95.0" HBox.hgrow="ALWAYS" />
                        <VBox alignment="TOP_CENTER" spacing="5.0">
                            <children>
                                <Button fx:id="buttonArcFromShow" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Show">
                                    <tooltip>
                                        <Tooltip text="Shows the selected element in the graph" />
                                    </tooltip>
                                </Button>
                                <Button fx:id="buttonArcFromEdit" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Edit">
                                    <tooltip>
                                        <Tooltip text="Shows the selected element in the element insepctor" />
                                    </tooltip>
                                </Button>
                                <Button fx:id="buttonArcFromDisable" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Disable">
                                    <tooltip>
                                        <Tooltip text="Disables or enables the selected element" />
                                    </tooltip>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
        <Separator orientation="VERTICAL" />
        <VBox spacing="5.0">
            <children>
                <Label text="Graph Entities:" />
                <HBox spacing="5.0" VBox.vgrow="ALWAYS">
                    <children>
                        <ListView fx:id="listGraphEntities" prefHeight="85.0" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Button fx:id="buttonElementDisable" disable="true" mnemonicParsing="false" text="Disable" />
                  <Button fx:id="buttonAllDisable" mnemonicParsing="false" text="Disable All" />
                  <Button fx:id="buttonAllEnable" mnemonicParsing="false" text="Enable All" />
               </children>
            </HBox>
            </children>
        </VBox>
        <Separator orientation="VERTICAL" />
        <VBox spacing="5.0">
            <children>
                <Label fx:id="labelListConnectionsOut" text="Outgoing Arcs:" />
                <HBox spacing="5.0" VBox.vgrow="ALWAYS">
                    <children>
                        <ListView fx:id="listConnectionsOutgoing" prefHeight="95.0" HBox.hgrow="ALWAYS" />
                        <VBox alignment="TOP_CENTER" spacing="5.0">
                            <children>
                                <Button fx:id="buttonArcToShow" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Show">
                                    <tooltip>
                                        <Tooltip text="Shows the selected element in the graph" />
                                    </tooltip>
                                </Button>
                                <Button fx:id="buttonArcToEdit" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Edit">
                                    <tooltip>
                                        <Tooltip text="Shows the selected element in the element insepctor" />
                                    </tooltip>
                                </Button>
                                <Button fx:id="buttonArcToDisable" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Disable">
                                    <tooltip>
                                        <Tooltip text="Disables or enables the selected element" />
                                    </tooltip>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</HBox>
